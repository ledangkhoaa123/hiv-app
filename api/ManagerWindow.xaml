<Window x:Class="api.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:api"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800"
         WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Chọn bác sĩ:"/>
        <ComboBox x:Name="DoctorComboBox" DisplayMemberPath="userID.name" SelectedValuePath="_id" Height="30" Margin="0,5"/>

        <TextBlock Text="Chọn ngày khám:" Margin="10,10,0,0"/>
        <DatePicker x:Name="DatePicker" Margin="0,5"/>

        <Button Content="Tạo lịch khám" Click="CreateSchedule_Click" Margin="0,15,0,0" Height="35"/>
    </StackPanel>
</Window>
