<Window x:Class="api.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:api"
        mc:Ignorable="d"
        Title="Đăng ký khám bệnh"
        Height="550"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0FAFF">

    <Border CornerRadius="10" Padding="20" Background="White" Margin="20" BorderBrush="#CCE7FF" BorderThickness="1">
        <StackPanel>

            <TextBlock Text="Đăng ký lịch khám bệnh" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="#007ACC" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Bác sĩ -->
            <TextBlock Text="Chọn bác sĩ:" FontWeight="SemiBold" Foreground="#333"/>
            <ComboBox x:Name="DoctorComboBox"
                      DisplayMemberPath="userID.name"
                      SelectedValuePath="_id"
                      Height="35"
                      Margin="0,5,0,15"
                      Background="White"
                      BorderBrush="#66B2FF"/>

            <!-- Dịch vụ -->
            <TextBlock Text="Chọn dịch vụ:" FontWeight="SemiBold" Foreground="#333"/>
            <ComboBox x:Name="ServiceComboBox"
                      DisplayMemberPath="name"
                      SelectedValuePath="_id"
                      Height="35"
                      Margin="0,5,0,15"
                      Background="White"
                      BorderBrush="#66B2FF"
                      SelectionChanged="ServiceComboBox_SelectionChanged"/>

            <!-- Ngày khám -->
            <TextBlock Text="Chọn ngày khám:" FontWeight="SemiBold" Foreground="#333"/>
            <DatePicker x:Name="DatePicker"
                        SelectedDate="{x:Static sys:DateTime.Now}"
                        Height="35"
                        Margin="0,5,0,15"
                        BorderBrush="#66B2FF"
                        Background="White"/>

            <!-- Nút chức năng -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="Xem lịch trống"
                        Click="CheckSlots_Click"
                        Width="150"
                        Height="40"
                        Background="#0099FF"
                        Foreground="White"
                        Margin="0,0,10,0"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>

                <Button Content="Đăng ký khám"
                        Click="RegisterButton_Click"
                        Width="150"
                        Height="40"
                        Background="#28A745"
                        Foreground="White"
                        Margin="0,0,10,0"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>

                <Button Content="Xem lịch đã đặt"
                        Click="ViewAppointments_Click"
                        Width="150"
                        Height="40"
                        Background="#17A2B8"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- Danh sách slot -->
            <TextBlock Text="Danh sách slot trống:" FontWeight="SemiBold" Foreground="#333"/>
            <ListBox x:Name="SlotListBox"
                     Height="150"
                     Margin="0,5"
                     BorderBrush="#CCE7FF"
                     SelectionChanged="SlotListBox_SelectionChanged"/>
        </StackPanel>
    </Border>
</Window>
