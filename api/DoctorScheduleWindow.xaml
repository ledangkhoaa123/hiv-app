<Window x:Class="api.DoctorScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:api"
        mc:Ignorable="d"
        Title="Lịch làm việc bác sĩ"
        Height="550"
        Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#F0FAFF">

    <Border Background="White"
            BorderBrush="#CCE7FF"
            BorderThickness="1"
            CornerRadius="10"
            Margin="20"
            Padding="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề + điều hướng tuần -->
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                <Button Content="← Tuần trước"
                        Width="120"
                        Height="35"
                        Margin="5"
                        Click="PreviousWeek_Click"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <TextBlock x:Name="WeekLabel"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#007ACC"
                           VerticalAlignment="Center"
                           Margin="10,0"/>

                <Button Content="Tuần sau →"
                        Width="120"
                        Height="35"
                        Margin="5"
                        Click="NextWeek_Click"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- Danh sách lịch làm việc -->
            <ListBox x:Name="ScheduleList"
                     Grid.Row="1"
                     Margin="0,0,0,10"
                     BorderBrush="#CCE7FF"
                     BorderThickness="1"
                     FontSize="14"
                     Background="White"
                     SelectionChanged="ScheduleList_SelectionChanged">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Margin" Value="0,0,0,5"/>
                        <Setter Property="Background" Value="#F9FCFF"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="0 0 0 1"/>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="Foreground" Value="#333"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#D0ECFF"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <!-- Chọn ca và nút xác nhận -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,10">
                <TextBlock Text="Ca:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,5,0"/>
                <ComboBox x:Name="ShiftComboBox"
                          Width="130"
                          Height="30"
                          Margin="5"
                          SelectedIndex="0"
                          Background="White"
                          BorderBrush="#66B2FF">
                    <ComboBoxItem Content="morning"/>
                    <ComboBoxItem Content="afternoon"/>
                    <ComboBoxItem Content="full"/>
                </ComboBox>
                <Button x:Name="ConfirmButton"
                        Content="Xác nhận lịch"
                        Width="150"
                        Height="35"
                        Margin="10,0,0,0"
                        IsEnabled="False"
                        Background="#28A745"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ConfirmButton_Click"/>
            </StackPanel>

            <!-- Trạng thái -->
            <TextBlock x:Name="StatusText"
                       Grid.Row="3"
                       Foreground="DarkGreen"
                       FontStyle="Italic"
                       FontSize="13"
                       Margin="0,0,0,5"/>
        </Grid>
    </Border>
</Window>
