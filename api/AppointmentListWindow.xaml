<Window x:Class="api.AppointmentListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:api"
        mc:Ignorable="d"
        Title="Lịch hẹn đã đặt"
        Height="550"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0FAFF">

    <Border CornerRadius="10" Padding="20" Background="White" Margin="20" BorderBrush="#CCE7FF" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Text="Danh sách lịch hẹn đã đặt"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#007ACC"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Danh sách lịch hẹn -->
            <ListBox x:Name="AppointmentListBox"
                     Grid.Row="1"
                     BorderBrush="#CCE7FF"
                     BorderThickness="1"
                     Background="White">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" BorderThickness="0 0 0 1" Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding serviceID.name}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#333"/>

                                <TextBlock Text="{Binding doctorID.userID.name, StringFormat='Bác sĩ: {0}'}"
                                           Margin="0,2,0,0"
                                           Foreground="#555"/>

                                <TextBlock Text="{Binding startTime, StringFormat='Thời gian bắt đầu: {0:HH:mm dd/MM/yyyy}'}"
                                           Foreground="#555"/>

                                <TextBlock Text="{Binding status, StringFormat='Trạng thái: {0}'}"
                                           Foreground="DarkBlue"
                                           FontWeight="SemiBold"/>

                                <!-- Nút thanh toán -->
                                <Button Content="Thanh toán"
                                        Tag="{Binding _id}"
                                        Margin="0,8,0,0"
                                        Width="120"
                                        Height="32"
                                        Background="#28A745"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        HorizontalAlignment="Left"
                                        Cursor="Hand"
                                        Click="PayButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding status}" Value="Chờ thanh toán">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Window>
